.userinfo{
  background: #fd72a9;
  color: #fff;
  font-size: 36rpx;
}
.userinfos {
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  align-items: center;
  background: #fd72a9;
}
.userinfo_text{
  margin: 15rpx;
}
.userinfo-avatar {
  width: 128rpx;
  height: 128rpx;
  margin: 10rpx;
}

.userinfo-nickname {
  color: #fff;
  font-size: 36rpx;
}

.userinfo-setting {
  margin-right: 10rpx;
  font-size: 26rpx;
  color: #fd72a9;
  background: #f1f1f1
}
.userinfo-border {
  height: 2rpx;
  background: pink;
}
.userinfo-border2 {
  height: 4rpx;
  background: #f1f1f1;
}
.userinfo-border3 {
  height: 10rpx;
  background: #f1f1f1;
}
.fontright {
  display: flex;
  flex-direction: row;
