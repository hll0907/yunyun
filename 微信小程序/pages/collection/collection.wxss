/* pages/collection/collection.wxss */
.swiper-tab {
  width: 100%;
  border-bottom: 1rpx solid #fff;
  text-align: center;
  line-height: 80rpx;
  background: #fd72a9;
}

.swiper-tab-list {
  font-size: 30rpx;
  display: inline-block;
  width: 50%;
  color: #fff;
}

.on {
  color: red;
  border-bottom: 4rpx solid #999;
}

.swiper-box {
  display: block;
  height: 100%;
  width: 100%;
  overflow: hidden;
}

.swiper-box view {
  font-size: 24rpx;
}
/*  加载更多   */

.weui-loading {
  margin: 0 5px;
  width: 20px;
  height: 20px;
  display: inline-block;
  vertical-align: middle;
  -webkit-animation: weuiLoading 1s steps(12, end) infinite;
  animation: weuiLoading 1s steps(12, end) infinite;
  background: transparent url(data:image/svg+xml;base64,) no-repeat;
  background-size: 100%;
}

.weui-loadmore {
  width: 65%;
  margin: 1.5em auto;
  line-height: 1.6em;
  font-size: 14px;
  text-align: center;
}

.weui-loadmore__tips {
  display: inline-block;
  vertical-align: middle;
}

.goodrefesh {
  display: flex;
  flex-direction: row;
  align-items: center;
  align-self: center;
  justify-content: center;
}

.goodimg {
  width: 240rpx;
  height: 240rpx;
  margin: 5rpx;
  border: 4px solid #ffe2d6;
}

.goodsource {
  margin: 10rpx;
  color: #fff;
  font-size: 24rpx;
  background: #f80;
}

.goodcoupon {
  color: #fff;
  font-size: 24rpx;
  margin-left: 10rpx;
  border: 1px solid red;
  background: red;
}

.goodintegral {
  color: red;
  font-size: 24rpx;
  margin-left: 20rpx;
  border: 1px solid red;
}

.goodprice {
  color: red;
  font-size: 30rpx;
  margin-left: 10rpx;
}

.goodoriginprice {
  color: #999;
  font-size: 24rpx;
  margin-left: 10rpx;
}

.goodsale {
  color: #999;
  font-size: 28rpx;
  margin-left: 10rpx;
}
.fontright {
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  align-items: center;
}